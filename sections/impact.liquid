{% schema %}
{
  "name": "Impacto Social",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Etiqueta",
      "default": "Responsabilidad social (o algo así)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título Sección",
      "default": "Chupitos de karma"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Beber es un acto político. El 15% de cada pack financia proyectos que nos importan. Sin intermediarios raros, del vicio a la virtud."
    },
    {
      "type": "text",
      "id": "cause_title",
      "label": "Título Causa",
      "default": "Destino actual: Salud Queer Rural"
    },
    {
      "type": "textarea",
      "id": "cause_description",
      "label": "Descripción Causa",
      "default": "Porque en los pueblos también hay pluma y necesitamos espacios seguros y salud mental de calidad lejos de la gran ciudad."
    },
    {
      "type": "text",
      "id": "donation_percentage",
      "label": "Porcentaje Donación",
      "default": "15%"
    },
    {
      "type": "text",
      "id": "donation_label",
      "label": "Etiqueta Donación",
      "default": "Beneficio donado"
    },
    {
      "type": "text",
      "id": "cooperatives_count",
      "label": "Número Cooperativas",
      "default": "3"
    },
    {
      "type": "text",
      "id": "cooperatives_label",
      "label": "Etiqueta Cooperativas",
      "default": "Cooperativas"
    },
    {
      "type": "text",
      "id": "propose_title",
      "label": "Título Proponer Causa",
      "default": "¿Tienes una causa?"
    },
    {
      "type": "textarea",
      "id": "propose_description",
      "label": "Descripción Proponer",
      "default": "Propon el destino de la próxima edición."
    },
    {
      "type": "url",
      "id": "propose_link",
      "label": "Link Proponer Causa"
    }
  ]
}
{% endschema %}

<!-- SECTION 4: IMPACT -->
<section id="impacto" class="px-6 py-24 lg:px-24 border-b border-stone-200">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
    <div class="fade-in-up" style="animation-play-state: paused;">
      <span class="text-red-600 font-medium text-xs tracking-normal mb-4 block">{{ section.settings.label }}</span>
      <h2 class="text-4xl font-semibold mb-6 tracking-tight text-stone-900">
        {{ section.settings.title }}
      </h2>
      <p class="text-stone-600 mb-10 leading-relaxed text-lg font-light">
        {{ section.settings.description }}
      </p>

      <div class="bg-white p-8 border border-stone-200 relative overflow-hidden shadow-sm group hover:border-red-600 transition-colors rounded-md">
        <div class="absolute top-0 left-0 w-1 h-full bg-stone-900 group-hover:bg-red-600 transition-colors"></div>
        <h3 class="text-xl font-bold mb-2">{{ section.settings.cause_title }}</h3>
        <p class="text-stone-600 mb-6 text-sm leading-relaxed">
          {{ section.settings.cause_description }}
        </p>
        <div class="flex items-center gap-4 text-xs font-semibold tracking-normal">
          <span class="flex items-center gap-2 text-stone-900">
            <span class="iconify text-green-600" data-icon="lucide:check-circle" data-width="16"></span>
            Donación verificada
          </span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 fade-in-up delay-100 h-full" style="animation-play-state: paused;">
      <div class="bg-stone-50 p-6 border border-stone-200 flex flex-col justify-center items-center text-center aspect-square rounded-md">
        <span class="text-5xl font-bold mb-2 text-stone-900">{{ section.settings.donation_percentage }}</span>
        <span class="text-[11px] tracking-normal text-stone-500 font-semibold">{{ section.settings.donation_label }}</span>
      </div>
      <div class="bg-stone-50 p-6 border border-stone-200 flex flex-col justify-center items-center text-center aspect-square rounded-md">
        <span class="text-5xl font-bold mb-2 text-stone-900">{{ section.settings.cooperatives_count }}</span>
        <span class="text-[11px] tracking-normal text-stone-500 font-semibold">{{ section.settings.cooperatives_label }}</span>
      </div>
      <div class="col-span-2 bg-stone-900 text-white p-8 flex flex-col justify-between relative overflow-hidden group cursor-pointer hover:bg-red-600 transition-colors duration-500 min-h-[160px] rounded-md">
        <div class="relative z-10">
          <h4 class="text-lg font-bold mb-1">{{ section.settings.propose_title }}</h4>
          <p class="text-white/70 text-sm">{{ section.settings.propose_description }}</p>
        </div>
        {% if section.settings.propose_link != blank %}
          <a href="{{ section.settings.propose_link }}" class="absolute inset-0 z-20"></a>
        {% endif %}
        <span class="iconify absolute -bottom-4 -right-4 w-24 h-24 text-white/10 stroke-1 group-hover:scale-110 transition-transform" data-icon="lucide:megaphone" data-width="96"></span>
      </div>
    </div>
  </div>
</section>
