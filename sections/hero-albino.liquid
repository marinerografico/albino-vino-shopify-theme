{% schema %}
{
  "name": "Hero Albino",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Frase Principal",
      "default": "Albino. Valentín — No es solo vino. Es un acto de amor propio."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texto Botón CTA",
      "default": "Comprar ahora"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Link del Botón CTA",
      "default": "/products/valentin"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de Fondo (opcional)"
    }
  ]
}
{% endschema %}

<!-- HERO SECTION -->
<section class="min-h-[85vh] md:min-h-[90vh] flex flex-col items-center justify-center px-6 py-20 lg:px-24 relative overflow-hidden">
  
  <!-- Background Image (optional) -->
  {% if section.settings.hero_image != blank %}
    <div class="absolute inset-0 w-full h-full -z-10">
      <img 
        src="{{ section.settings.hero_image | img_url: '1920x' }}" 
        alt="Hero background" 
        class="w-full h-full object-cover opacity-10"
        loading="eager"
      />
    </div>
  {% endif %}
  
  <!-- Content -->
  <div class="max-w-4xl mx-auto text-center space-y-8 fade-in-up">
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight text-stone-900 leading-[1.1]">
      {{ section.settings.headline }}
    </h1>
    
    <div class="pt-4">
      <a 
        href="{{ section.settings.cta_link | default: '/products/valentin' }}" 
        class="inline-block bg-stone-900 text-white px-8 py-4 md:px-12 md:py-5 text-sm md:text-base font-bold tracking-widest uppercase hover:bg-red-600 transition-all duration-300 shadow-lg shadow-stone-900/20 hover:shadow-red-600/30 rounded-xl"
      >
        {{ section.settings.cta_text }}
      </a>
    </div>
  </div>
</section>
