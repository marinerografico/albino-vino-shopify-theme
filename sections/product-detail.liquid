{% schema %}
{
  "name": "Producto Valentín",
  "settings": [
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Descripción del Producto",
      "default": "Criado en Tierra de Barros, con manos curtidas y alma pura. Valentín no presume de etiquetas; revela lo que otros no ven. Tinto dulce, joven, con el carácter de quien elige lo desconocido — y se elige también."
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "Texto del Botón CTA",
      "default": "Añadir al carrito — con packaging incluido"
    },
    {
      "type": "checkbox",
      "id": "show_stock_count",
      "label": "Mostrar contador de stock (solo X disponibles)",
      "default": true
    },
    {
      "type": "number",
      "id": "low_stock_threshold",
      "label": "Umbral de stock bajo",
      "default": 10,
      "info": "Muestra 'solo X disponibles' cuando el stock está por debajo de este número"
    }
  ]
}
{% endschema %}

{%- assign product = product | default: all_products[section.settings.featured_product] -%}

<style>
  .fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .product-cta-button {
      min-height: 56px; /* Larger tap target */
      font-size: 14px;
    }
    
    .product-image {
      height: 70vh;
      min-height: 500px;
    }
  }
</style>

<div class="product-detail-page">
  
  <!-- PRODUCT SECTION - Mobile Optimized -->
  <section class="lg:px-0 border-stone-200 border-b relative bg-white" id="product">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      
      <!-- Product Image - Sticky on Desktop -->
      <div class="relative product-image lg:h-auto lg:min-h-screen bg-[#F0EEE6] flex items-center justify-center overflow-hidden lg:sticky lg:top-0 border-b lg:border-b-0 lg:border-r border-stone-200">
        <div class="w-full h-full relative">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | img_url: '800x' }}" 
              srcset="{{ product.featured_image | img_url: '400x' }} 400w, {{ product.featured_image | img_url: '800x' }} 800w, {{ product.featured_image | img_url: '1200x' }} 1200w"
              sizes="(max-width: 768px) 100vw, 50vw"
              alt="{{ product.title }}" 
              class="w-full h-full object-cover"
              loading="eager"
              fetchpriority="high"
            >
          {% else %}
            <div class="w-full h-full bg-stone-100 flex items-center justify-center">
              <span class="text-stone-400">Imagen del producto</span>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Product Details -->
      <div class="flex flex-col justify-center px-6 py-12 md:py-24 lg:px-20 bg-white">
        <div class="max-w-lg w-full mx-auto space-y-8">
          
          <!-- Product Title & Price -->
          <div class="space-y-4">
            <div class="flex items-center gap-2 mb-2">
              <span class="bg-red-50 text-red-600 px-3 py-1 rounded-md text-[10px] font-bold uppercase tracking-widest border border-red-100">Edición Valentín</span>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-stone-900">{{ product.title }}</h1>
            <div class="flex items-baseline gap-4">
              <span class="text-3xl font-light text-stone-900">{{ product.price | money }}</span>
              {% if product.compare_at_price > product.price %}
                <span class="text-lg text-stone-400 line-through">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </div>
            
            <!-- Stock Counter -->
            {% if section.settings.show_stock_count and product.selected_or_first_available_variant.inventory_quantity <= section.settings.low_stock_threshold and product.selected_or_first_available_variant.inventory_quantity > 0 %}
              <div class="flex items-center gap-2 text-sm text-red-600 font-medium">
                <span class="iconify" data-icon="lucide:alert-circle" data-width="16"></span>
                <span>Solo {{ product.selected_or_first_available_variant.inventory_quantity }} disponible{{ product.selected_or_first_available_variant.inventory_quantity | pluralize: '', 's' }}</span>
              </div>
            {% endif %}
          </div>

          <!-- Product Description -->
          <div class="space-y-4">
            <p class="text-lg text-stone-700 leading-relaxed font-light">
              {{ section.settings.product_description }}
            </p>
          </div>

          <!-- Add to Cart Form -->
          {% form 'product', product, id: 'product-form', class: 'space-y-6' %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            
            <button 
              type="submit" 
              name="add"
              class="product-cta-button w-full bg-stone-900 text-white px-8 py-5 text-sm font-bold tracking-widest uppercase hover:bg-red-600 active:scale-[0.99] transition-all duration-300 shadow-lg shadow-stone-900/20 hover:shadow-red-600/30 rounded-xl"
              id="add-to-cart-button"
            >
              {{ section.settings.cta_button_text }}
            </button>
            
            <!-- Shipping Info -->
            <div class="flex justify-center items-center gap-4 text-xs text-stone-400 uppercase tracking-wider font-medium pt-2">
              <span class="flex items-center gap-2">
                <span class="iconify text-green-500" data-icon="lucide:check" data-width="14"></span>
                Envío incluido
              </span>
              <span class="w-px h-4 bg-stone-300"></span>
              <span>Packaging incluido</span>
            </div>
          {% endform %}

          <!-- Additional Info -->
          <div class="pt-4 border-t border-stone-100">
            <div class="space-y-3 text-sm text-stone-600">
              <p class="flex items-start gap-3">
                <span class="iconify text-stone-400 flex-shrink-0 mt-0.5" data-icon="lucide:package" data-width="18"></span>
                <span>Incluye botella + packaging completo</span>
              </p>
              <p class="flex items-start gap-3">
                <span class="iconify text-stone-400 flex-shrink-0 mt-0.5" data-icon="lucide:truck" data-width="18"></span>
                <span>Envío en 24/48h dentro de España</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  // Form submission with loading state
  document.addEventListener('DOMContentLoaded', function() {
    const productForm = document.getElementById('product-form');
    const addToCartButton = document.getElementById('add-to-cart-button');
    
    if (productForm && addToCartButton) {
      productForm.addEventListener('submit', function(e) {
        if (!addToCartButton.disabled) {
          addToCartButton.disabled = true;
          const originalText = addToCartButton.textContent;
          addToCartButton.textContent = 'Añadiendo...';
          addToCartButton.classList.add('opacity-75');
          
          // Re-enable after delay in case of error
          setTimeout(() => {
            if (addToCartButton.disabled) {
              addToCartButton.disabled = false;
              addToCartButton.textContent = originalText;
              addToCartButton.classList.remove('opacity-75');
            }
          }, 5000);
        }
      });
    }
  });
</script>
